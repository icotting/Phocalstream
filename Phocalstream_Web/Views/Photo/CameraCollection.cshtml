@model Phocalstream_Web.Models.ViewModels.CollectionViewModel

@{
    ViewBag.Title = Model.Collection.Site.Name;
}

    @section Styles
    {
         <style type="text/css">
            #silverlightControlHost {
	            height: 100%;
	            text-align:center;
            }
            #pageHeader { 
	            position: relative;
	            top: 0;
	            left: 0;
	            background-color: rgba(0,0,0,0.4);
	            height: 140px;
	            width: 100%;
	            padding-top: 10px;
	            z-index: 20;
            }

            #pageHeader h1 {
                padding-left: 50px;
                color: white;
                font-family: Arial;
                font-size: 28pt;
            }

            #pageHeader div {
                position: relative; 
                color: white; 
                padding-left: 50px;
                font-size: 10pt;
                font-family: Arial;
            }

