@model ICollection<Phocalstream_Shared.Data.Model.Photo.Tag>
@{
    ViewBag.Title = "Tags";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well">
                <h2>Current Photo Tags</h2>
            </div>

            @if (Model.Count == 0)
            {
                <div class="col-md-12 well text-center">
                    No photos have been tagged.
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered table-condensed">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        Tag Name
                                    </th>
                                    <th class="text-center">
                                        Photos Count
                                    </th>
                                    <th class="text-center">
                                        See Photos
                                    </th>
                                    <th class="text-center">
                                        Remove Tag From All Photos
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var tag in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        @tag.Name
                                    </td>
                                    <td class="text-center">
                                        <span class="label label-info">@tag.Photos.Count</span>
                                    </td>
                                    <td class="text-center">
                                        @Html.ActionLink("See Photos", "Index", "Search", new { tag = tag.Name }, new { target = "_blank" })
                                    </td>
                                    <td class="text-center">
                                        @Html.ActionLink("Delete Tag", "DeleteTag", "Photo", new { tagID = tag.ID }, null)
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
