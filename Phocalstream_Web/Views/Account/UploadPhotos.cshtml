@model Phocalstream_Shared.Data.Model.View.UserPhotoUpload
@{
    ViewBag.Title = "UploadPhotos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/CSS/Account.css",
               "~/Content/bootstrap/css/bootstrap-responsive.css",
               "~/Content/file-upload/jquery.fileupload-ui-noscript.css",
               "~/Content/file-upload/jquery.fileupload-ui.css")

@Scripts.Render("~/Content/Scripts/jquery-ui-1.9.2.js", 
                "~/Content/file-upload/jquery.fileupload.js",
                "~/Content/file-upload/jquery.iframe-transport.js",
                "~/Content/file-upload/jquery.fileupload-ui.js")


<div class="container">
    <div class="content">
        <div class="text-center relative">
            <h1 class="page-header">Upload Photos</h1>
            <div class="save-changes">
                @Html.ActionLink("Upload Photos", "UploadPhotos", "Account", null, new { @class = "btn btn-info" })
            </div>
        </div>

        <div class="row">
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                    Select A Camera Site To Upload Pictures From
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Action</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Another action</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Something else here</a></li>
                    <li role="presentation" class="divider"></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Separated link</a></li>
                </ul>
            </div>
        </div>

        <form action="/api/upload/upload" enctype="multipart/form-data">
            <div class="row fileupload-buttonbar">
                <div class="span7">
                    <div class="well">
                        <i class="icon-plus"></i><span>&nbsp;&nbsp;Add files...</span>
                        <input type="file" id="fileupload" name="fileupload" accept="image/*" multiple="multiple">
                        <button id="btnUploadAll" class="btn btn-success pull-right" type="button">
                            Upload All
                        </button>
                        <div class="clearfix">
                        </div>
                        <div class="progress">
                            <div class="progress-bar" id="overallbar" style="width: 0%">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span7">
                    <div class="well hide" id="filelistholder">
                    </div>
                </div>
                <div class="span7">
                </div>
            </div>
        </form>

    </div>
</div>


@section Scripts
{
    <script type="text/javascript">
        $(function () {
            $('#fileupload').fileupload({
                dataType: "json",
                url: "/api/upload/upload",
                limitConcurrentUploads: 1,
                sequentialUploads: true,
                progressInterval: 100,
                add: function (e, data) {
                    $('#filelistholder').removeClass('hide');
                    data.context = $('<div />').text(data.files[0].name).appendTo('#filelistholder');
                    $('</div><div class="progress"><div class="progress-bar" style="width:0%"></div></div>').appendTo(data.context);
                    $('#btnUploadAll').click(function () {
                        data.submit();
                    });
                },
                done: function (e, data) {
                    data.context.text(data.files[0].name + '... Completed');
                    $('</div><div class="progress"><div class="progress-bar" style="width:100%"></div></div>').appendTo(data.context);
                },
                progressall: function (e, data) {
                    var progress = parseInt(data.loaded / data.total * 100, 10);
                    $('#overallbar').css('width', progress + '%');
                },
                progress: function (e, data) {
                    var progress = parseInt(data.loaded / data.total * 100, 10);
                    data.context.find('.progress-bar').css('width', progress + '%');
                }
            });
        });
    </script>
}




