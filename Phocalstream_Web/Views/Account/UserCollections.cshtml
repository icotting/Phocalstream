@model Phocalstream_Web.Models.ViewModels.UserCollectionViewModel
@{
    ViewBag.Title = "UserCollections";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="well">
                <div class="row">
                    <div class="col-md-10 h2 no-margin">@Model.User.FirstName's Collections</div>
                    <a class="btn btn-danger col-md-2 button-override" href="@Url.Action("DeleteUserCollections", "Account")">Delete All Collections</a>
                </div>
            </div>

            @if (Model.Collections.Count() == 0)
            {
                <div class="col-md-12 well text-center">
                    You haven't created any collections yet!
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered table-condensed">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        Collection Name
                                    </th>
                                    <th class="text-center">
                                        Delete?
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var c in Model.Collections)
                            {
                                <tr>
                                    <td class="text-center">
                                        @Html.ActionLink(@c.Name, "SearchResult", "Search", new { collectionID = c.ID }, null)
                                    </td>
                                    <td class="text-center">
                                        <a class="icon-delete no-underline" href="@Url.Action("DeleteUserCollection", "Account", new { collectionID = c.ID })">Delete</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>